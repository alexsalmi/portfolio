---
import { Image } from "astro:assets";
import { PROJECTS_SECTION_ID, SCROLL_ANIMATION_ID, SKILLS } from "../constants";
import { PROJECTS } from "../constants/projects";
import { Icon } from "astro-icon/components";

const getSkill = (name: string) => {
  return (
    SKILLS.Frameworks.find((sk) => sk.label === name) ||
    SKILLS.Languages.find((sk) => sk.label === name) ||
    SKILLS.Services.find((sk) => sk.label === name)
  );
};
---

<section class="projects" id={PROJECTS_SECTION_ID}>
  <h2 class="title" id={SCROLL_ANIMATION_ID}>Projects</h2>
  {
    PROJECTS.map((project) => (
      <div class="projectItem" id={SCROLL_ANIMATION_ID}>
        <Image
          class="projectImage"
          width={1024}
          height={1024}
          src={project.image}
          alt={`An image of ${project.name}`}
        />
        <div class="projectInfo">
          <h3>{project.name}</h3>
          <p>{project.description}</p>
          <div class="projectSkills">
            {project.skills.map(getSkill).map((skill) => (
              <span
                class="skillItem"
                style={`color: ${skill?.color}; background-color: ${skill?.background};`}
              >
                <Icon
                  name={skill?.icon}
                  class="icon"
                  id={`${skill?.label}_icon`}
                />
                <label for={`${skill?.label}_icon`}>{skill?.label}</label>
              </span>
            ))}
          </div>
          <a
            href={project.link}
            class="link"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon
              name="mdi:external-link"
              class="icon external"
              id={`${project.name}_github_icon`}
            />
          </a>
          <a
            href={project.github}
            class="link"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon
              name="simple-icons:github"
              class="icon"
              id={`${project.name}_github_icon`}
            />
          </a>
        </div>
      </div>
    ))
  }
</section>

<style>
  .projects {
    width: 100%;
    background-color: var(--background-secondary);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5rem 1rem;
    gap: 2.5rem;
  }

  .title {
    font-size: 1.6rem;
    font-weight: 500;
    opacity: 0.66;
    border-bottom: 1px solid var(--accent-secondary);
    width: calc(100% - 2rem);
    max-width: calc((var(--max-width) * 3 / 4) - 2rem);
    margin-bottom: -1rem;
  }

  .projectItem {
    display: flex;
    max-width: calc(var(--max-width) * 3 / 4);
    height: 25rem;
    border: 2px solid var(--accent-secondary);
    border-radius: 1rem;
    background-color: var(--background-alternate);
  }

  .projectItem:nth-child(odd) {
    flex-direction: row-reverse;
  }

  .projectImage {
    height: 100%;
    width: auto;
    max-width: 50%;
    aspect-ratio: 1/1;
    object-fit: cover;
    border-radius: 0.85rem;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-right: 2px solid var(--accent-secondary);
  }

  .projectItem:nth-child(odd) > .projectImage {
    border-radius: 1rem;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-right: none;
    border-left: 2px solid var(--accent-secondary);
  }

  .projectInfo {
    position: relative;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .projectItem:nth-child(odd) > .projectInfo {
    padding: 1rem;
    padding-left: 1.5rem;
  }

  .projectInfo > h3 {
    font-size: 1.5rem;
    font-weight: 600;
    border-bottom: 1px solid var(--accent);
  }

  .projectInfo > p {
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .projectSkills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: auto 0 0;
  }

  .skillItem {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .link {
    position: absolute;
    top: 1.25rem;
    right: 1.5rem;
    opacity: 0.66;
    transition: opacity 0.25s ease;
  }

  .link:nth-of-type(1) {
    right: 3.75rem;
  }

  .link:hover {
    opacity: 1;
  }

  .link > .icon {
    height: 1.5rem;
    width: 1.5rem;
  }

  .link > .icon.external {
    height: 1.6rem;
    width: 1.6rem;
  }

  @media (max-width: 650px) {
    .projectItem {
      flex-direction: column;
      height: fit-content;
    }

    .projectItem:nth-child(odd) {
      flex-direction: column;
    }

    .projectImage {
      width: 100%;
      max-width: none;
      height: auto;
      border-radius: 1rem;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
      border: none;
      border-bottom: 2px solid var(--accent-secondary);
    }

    .projectItem:nth-child(odd) > .projectImage {
      border-radius: 1rem;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
      border-left: none;
      border-bottom: 2px solid var(--accent-secondary);
    }

    .skillItem {
      font-size: 0.85rem;
    }

    .icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    .link {
      top: 1.5rem;
    }

    .link > .icon {
      height: 1.25rem;
      width: 1.25rem;
    }

    .link > .icon.external {
      height: 1.35rem;
      width: 1.35rem;
    }
  }
</style>
