---
import { Image } from "astro:assets";
import headshotImage from "../assets/headshot.jpeg";
import { HERO_SECTION_ID } from "../constants";

const yoe = Math.floor(
  new Date(Date.now() - new Date("06/15/2020").getTime()).getFullYear() - 1970,
);
---

<section class="hero" id={HERO_SECTION_ID}>
  <Image
    class="headshot-image"
    width={320}
    height={320}
    src={headshotImage}
    alt="A headshot of Alex Salmi"
  />
  <div class="content">
    <h2 class="title">Hi, I'm Alex Salmi</h2>
    <div class="description">
      <p>
        I'm a Full Stack Software Engineer with {yoe} years of experience creating
        performant, scalable web apps.
      </p>
      <p>
        I've primarily created applications related to authentication, user
        management, and more recently internal tooling for animation and
        scripting workflows.
      </p>
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-height: 55rem;
    gap: 2rem;
  }

  .headshot-image {
    border-radius: 4rem;
    border-bottom-right-radius: 0;
    box-shadow: 0 0 0.5rem var(--shadow);
    filter: grayscale(0.1);
    opacity: 0.9;
    z-index: -1;
  }

  .content {
    min-height: 20rem;
    max-width: 45rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 2rem;
  }

  .title {
    font-size: 3rem;
    font-weight: 500;
    border-bottom: 1px solid var(--accent);
  }

  .description {
    font-size: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  @media (max-width: 850px) {
    .hero {
      flex-direction: column;
      align-items: center;
    }

    .headshot-image {
      width: 12rem;
      height: 12rem;
      border-radius: 2rem;
      border-bottom-left-radius: 0;
    }

    .content {
      justify-content: flex-start;
    }

    .title {
      font-size: 2.25rem;
    }

    .description {
      font-size: 1rem;
    }
  }
</style>
