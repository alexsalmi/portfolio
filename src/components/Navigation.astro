---
import {
  ABOUT_SECTION_ID,
  CONNECT_SECTION_ID,
  EXPERIENCE_SECTION_ID,
  PROJECTS_SECTION_ID,
} from "../constants";

interface Props {
  direction?: "horizontal" | "vertical";
}

const { direction } = Astro.props;
---

<nav class=`nav ${direction || "horizontal"}`>
  <ul>
    <li class=`navList ${direction || "horizontal"}`>
      <a href=`#${ABOUT_SECTION_ID}` class="navItem">About</a>
      <a href=`#${EXPERIENCE_SECTION_ID}` class="navItem">Experience</a>
      <a href=`#${PROJECTS_SECTION_ID}` class="navItem">Projects</a>
      <a href=`#${CONNECT_SECTION_ID}` class="navItem">Connect</a>
    </li>
  </ul>
</nav>

<style>
  .nav.horizontal {
    position: absolute;
  }

  .nav.vertical {
    width: 100%;
    border-top: 1px solid var(--accent);
  }

  .navList {
    display: flex;
    gap: 1rem;
  }

  .navList.vertical {
    flex-direction: column;
    padding: 0.5rem 0;
    gap: 0;
    width: 100%;
  }

  .navList.vertical > .navItem {
    width: 100%;
    text-align: right;
    padding: 0.5rem 0.75rem;
  }

  .navItem {
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    transition: background-color 0.5s ease;
  }

  .navItem:hover {
    text-decoration: none;
    background-color: var(--background-secondary);
    transform: scale(102%);
  }

  @media (max-width: 800px) {
    .horizontal {
      display: none;
    }
  }
</style>
