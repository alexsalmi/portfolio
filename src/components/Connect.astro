---
import { Icon } from "astro-icon/components";
import {
  CONNECT_SECTION_ID,
  SCROLL_ANIMATION_ID,
  SOCIAL_LINKS,
} from "../constants";
---

<section class="connect" id={CONNECT_SECTION_ID}>
  <h2 class="title" id={SCROLL_ANIMATION_ID}>Let's Connect</h2>
  {
    SOCIAL_LINKS.map(({ icon, link, prompt, color, background }) => (
      <a href={link} id={SCROLL_ANIMATION_ID}>
        <button
          class="linkBtn"
          style={`color: ${color}; background-color: ${background};`}
        >
          <Icon name={icon} class="icon" />
          {prompt}
        </button>
      </a>
    ))
  }
</section>

<style>
  .connect {
    width: 100%;
    background-color: var(--background-primary);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 5rem;
    gap: 1.25rem;
  }

  .title {
    font-weight: 500;
    opacity: 0.75;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .linkBtn {
    width: 17rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background-color: var(--accent);
    font-size: 1.1rem;
    border-radius: 0.5rem;
    padding: 0.5rem;
  }

  .icon {
    height: 1.75rem;
    width: 1.75rem;
  }
</style>
