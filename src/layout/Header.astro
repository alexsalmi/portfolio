---
import {
  DROPDOWN_MENU_ID,
  HEADER_CLOSE_ICON_ID,
  HEADER_DARK_MODE_ICON_ID,
  HEADER_LIGHT_MODE_ICON_ID,
  HEADER_MENU_ICON_ID,
  MAIN_HEADER_ID,
  MENU_TOGGLE_BUTTON_ID,
  THEME_TOGGLE_BUTTON_ID,
  HEADER_THEME_PLACEHOLDER_ICON_ID,
} from "../constants";
import Navigation from "../components/Navigation.astro";
import { Icon } from "astro-icon/components";
---

<header>
  <section class="main-header" id={MAIN_HEADER_ID}>
    <h1 class="title">Alex Salmi</h1>
    <Navigation />
    <button
      class="theme-button"
      aria-label="theme-button"
      id={THEME_TOGGLE_BUTTON_ID}
    >
      <Icon
        name="ic:baseline-circle"
        class="icon visible placeholder"
        id={HEADER_THEME_PLACEHOLDER_ICON_ID}
      />
      <Icon
        name="ic:outline-light-mode"
        class="icon"
        id={HEADER_LIGHT_MODE_ICON_ID}
      />
      <Icon
        name="ic:outline-dark-mode"
        class="icon"
        id={HEADER_DARK_MODE_ICON_ID}
      />
    </button>
    <button
      class="menu-button"
      aria-label="menu-button"
      id={MENU_TOGGLE_BUTTON_ID}
    >
      <Icon
        name="ic:round-menu"
        class="icon visible"
        id={HEADER_MENU_ICON_ID}
      />
      <Icon name="ic:round-close" class="icon" id={HEADER_CLOSE_ICON_ID} />
    </button>
  </section>
  <section class="dropdown-menu" id={DROPDOWN_MENU_ID}>
    <Navigation direction="vertical" />
  </section>
</header>

<style>
  header {
    width: calc(100% - 1rem);
    max-width: var(--max-width);
    background: var(--background-primary-blurred);
    position: fixed;
    top: 0.5em;
    border-radius: 0.75rem;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    font-size: 1.1rem;
    font-weight: 500;
    transition: box-shadow 0.1s linear;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 100;
  }

  header.shadow {
    box-shadow: 0 0 0.33rem var(--shadow);
  }

  .main-header {
    width: 100%;
    height: 3rem;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-left: 1rem;
    margin-right: auto;
  }

  .theme-button {
    height: 2rem;
    width: 2rem;
    border-radius: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 0;
    margin-left: auto;
    background-color: inherit;
    transition: background-color 0.25s ease;
  }

  .theme-button:hover {
    background-color: var(--background-secondary);
    transform: scale(1.05);
  }

  .icon {
    background-color: inherit;
    color: var(--foreground);
    transition: opacity 0.25s ease;
    display: none;
    height: 1.5rem;
    width: 1.5rem;
  }

  .icon.visible {
    display: block;
  }

  .icon.placeholder {
    opacity: 0.25;
  }

  .menu-button {
    display: none;
  }

  .dropdown-menu {
    width: calc(100% - 1rem);
    height: fit-content;
    opacity: 0;
    overflow: hidden;
    height: 0;
    transition: all 0.25s ease;
  }

  .expanded {
    height: 11.75rem;
    opacity: 1;
  }

  @media (max-width: 800px) {
    .title {
      margin-left: 0;
    }
    .menu-button {
      display: block;
    }
  }
</style>
